<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:padding="7dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_products_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike Sneakers"/>

        <TextView
            android:id="@+id/txt_products_date_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-09T 11:16:11.000Z"/>

        <HorizontalScrollView
            android:id="@+id/hor_display_scroll"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <TextView
                android:id="@+id/txt_display_product_variants"
                android:layout_width="wrap_content"
                android:layout_height="72dp"/>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/txt_product_tax_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VAT"/>
        <TextView
            android:id="@+id/txt_product_tax_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.5"/>

    </LinearLayout>

</android.support.v7.widget.CardView>